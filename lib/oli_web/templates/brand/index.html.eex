<div class="container">
  <div class="d-flex flex-row mt-4 mb-2">
    <div class="flex-grow-1"></div>
    <div><%= link "New Brand", to: Routes.brand_path(@conn, :new), class: "btn btn-md btn-outline-primary" %></div>
  </div>

  <%= if Enum.count(@brands) == 0 do %>
    <div class="my-5 text-center">
      There are no brands
    </div>
  <% else %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Logo</th>
          <th>Usage</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
    <%= for {brand, r_count, s_count} <- @brands do %>
        <tr>
          <td><%= brand.name %></td>

          <td>
            <%= brand_logo_html(brand) %>
          </td>

          <td>
            <div><%= s_count %> Sections</div>
            <div><%= r_count %> Registrations</div>
          </td>

          <td class="text-nowrap">
            <%= link "Details", to: Routes.brand_path(@conn, :show, brand), class: "btn btn-md btn-sm btn-outline-primary" %>
          </td>
        </tr>
    <% end %>
      </tbody>
    </table>
  <% end %>

</div>
