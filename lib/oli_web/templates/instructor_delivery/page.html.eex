
<%= for script <- @scripts do %>
  <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/" <> script) %>"></script>
<% end %>

<div class="my-3">
  <h3><%= @title %></h3>

  <%= if length(@objectives) > 0 do %>
    <h4>Learning Objectives</h4>
    <ul>
    <%= for o <- @objectives do %>
      <li><%= o %></li>
    <% end %>
    </ul>
    <hr class="my-4"/>
  <% end %>

  <h4>Instructor View of Content</h4>

  <%= raw(@html) %>
</div>
