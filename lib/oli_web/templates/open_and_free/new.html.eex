<div class="container">
  <span>
    <%= link to: Routes.open_and_free_path(@conn, :index) do %>
      <i class="las la-arrow-left"></i> Back
    <% end %>
  </span>

  <%= render OliWeb.SharedView, "_box_form_container.html", Map.merge(assigns, %{title: "Create Open and Free Section", bs_col_class: "col-sm-12 col-md-8 col-lg-6 mx-auto"}) do %>
    <%= live_render @conn, OliWeb.OpenAndFree.SectionForm, session: %{"source" => @source, "changeset" => @changeset, "action" => Routes.open_and_free_path(@conn, :create), "submit_text" => "Create", "cancel" => Routes.open_and_free_path(@conn, :index)} %>
  <% end %>
</div>
