
<%= render OliWeb.SharedView, "_box_form_container.html", Map.put(assigns, :title, value_or(assigns[:title], "Register Email")) do %>
  <%= form_for @changeset, @action, [as: :user], fn f -> %>
    <%= if @changeset.action do %>
      <div class="alert alert-danger">
        <p>Something went wrong, please check the errors below.</p>
      </div>
    <% end %>

    <div class="form-label-group">
      <%= email_input f, Pow.Ecto.Schema.user_id_field(@changeset), class: "form-control", placeholder: "Email", required: true, autofocus: true %>
      <%= label f, Pow.Ecto.Schema.user_id_field(@changeset), class: "control-label" %>
      <%= error_tag f, Pow.Ecto.Schema.user_id_field(@changeset) %>
    </div>

    <%= submit "Submit", class: "btn btn-md btn-primary btn-block" %>

  <% end %>
<% end %>
