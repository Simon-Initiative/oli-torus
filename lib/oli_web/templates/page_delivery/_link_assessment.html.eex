<div class="d-flex border-b mb-2" style="border-color: #dee2e6;">
  <div class="flex-grow-1">
    <%= link to: @page_link_url.(@node.revision.slug),
      class: resource_link_class(@active_page == @node.revision.slug) do %>
      <span class="page-title">
        <i class="fa fa-file-pen mr-2"></i> <%= @node.revision.title %>
      </span>
    <% end %>
  </div>
  <div class="mr-2">
    <%= @node.numbering.index %>
  </div>
</div>
