<%= for node <- @nodes do %>
  <li>
  <% props = Map.merge(assigns, %{
    node: node,
    nodes: node_children(node),
  }) %>
  <%= cond do %>
    <% container?(node) -> %>
      <%= render "_link_container.html", props %>
    <% from_node(node, :graded) -> %>
      <%= render "_link_assessment.html", props %>
    <% true -> %>
      <%= render "_link_page.html", props %>
  <% end %>
  </li>
<% end %>
