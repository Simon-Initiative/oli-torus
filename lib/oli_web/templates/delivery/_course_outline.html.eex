<style>
.course-outline {
  background-color: #fefefe;
  border: 1px solid #ddd;
  padding: 8px 12px;
}
</style>

<div class="course-outline">
  <%= for page <- @pages do %>
    <%= case page.graded do
      false -> render "link_page.html", page: page, link_help: @path_route.(@conn, @context_id, page.slug)
      true -> render "link_assessment.html", page: page, link_help: @path_route.(@conn, @context_id, page.slug)
    end %>
  <% end %>
