{
  "$id": "http://oli.cmu.edu/schemas/model-element.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Model Element",
  "description": "A content model element",
  "oneOf": [
    {
      "$ref": "#/$defs/top-level"
    },
    {
      "$ref": "#/$defs/block"
    },
    {
      "$ref": "#/$defs/inline"
    }
  ],
  "$defs": {
    "top-level": {
      "oneOf": [
        {
          "$ref": "#/$defs/text-block"
        },
        {
          "$ref": "#/$defs/list"
        },
        {
          "$ref": "#/$defs/media"
        },
        {
          "$ref": "#/$defs/table"
        },
        {
          "$ref": "#/$defs/math"
        },
        {
          "$ref": "#/$defs/code-v1"
        },
        {
          "$ref": "#/$defs/code-v2"
        },
        {
          "$ref": "#/$defs/blockquote"
        }
      ]
    },
    "block": {
      "oneOf": [
        {
          "$ref": "#/$defs/table-row"
        },
        {
          "$ref": "#/$defs/table-cell"
        },
        {
          "$ref": "#/$defs/list-item"
        },
        {
          "$ref": "#/$defs/math-line"
        },
        {
          "$ref": "#/$defs/code-line"
        }
      ]
    },
    "inline": {
      "oneOf": [
        {
          "$ref": "#/$defs/hyperlink"
        },
        {
          "$ref": "#/$defs/popup"
        },
        {
          "$ref": "#/$defs/input-ref"
        }
      ]
    },
    "text-block": {
      "oneOf": [
        {
          "$ref": "#/$defs/paragraph"
        },
        {
          "$ref": "#/$defs/heading"
        }
      ]
    },
    "heading": {
      "oneOf": [
        {
          "$ref": "#/$defs/heading-one"
        },
        {
          "$ref": "#/$defs/heading-two"
        },
        {
          "$ref": "#/$defs/heading-three"
        },
        {
          "$ref": "#/$defs/heading-four"
        },
        {
          "$ref": "#/$defs/heading-five"
        },
        {
          "$ref": "#/$defs/heading-six"
        }
      ]
    },
    "list": {
      "oneOf": [
        {
          "$ref": "#/$defs/ordered-list"
        },
        {
          "$ref": "#/$defs/unordered-list"
        }
      ]
    },
    "media": {
      "oneOf": [
        {
          "$ref": "#/$defs/image"
        },
        {
          "$ref": "#/$defs/youtube"
        },
        {
          "$ref": "#/$defs/audio"
        },
        {
          "$ref": "#/$defs/webpage"
        }
      ]
    },
    "text": {
      "type": "object",
      "properties": {
        "text": "string"
      },
      "required": [
        "text"
      ]
    },
    "paragraph": {
      "allOf": [
        {
          "$ref": "http://oli.cmu.edu/schemas/slate-element.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "p"
            }
          },
          "required": [
            "type"
          ]
        }
      ]
    },
    "heading-one": {
      "allOf": [
        {
          "$ref": "http://oli.cmu.edu/schemas/slate-element.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "h1"
            }
          },
          "required": [
            "type"
          ]
        }
      ]
    },
    "heading-two": {
      "allOf": [
        {
          "$ref": "http://oli.cmu.edu/schemas/slate-element.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "h2"
            }
          },
          "required": [
            "type"
          ]
        }
      ]
    },
    "heading-three": {
      "allOf": [
        {
          "$ref": "http://oli.cmu.edu/schemas/slate-element.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "h3"
            }
          },
          "required": [
            "type"
          ]
        }
      ]
    },
    "heading-four": {
      "allOf": [
        {
          "$ref": "http://oli.cmu.edu/schemas/slate-element.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "h4"
            }
          },
          "required": [
            "type"
          ]
        }
      ]
    },
    "heading-five": {
      "allOf": [
        {
          "$ref": "http://oli.cmu.edu/schemas/slate-element.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "h5"
            }
          },
          "required": [
            "type"
          ]
        }
      ]
    },
    "heading-six": {
      "allOf": [
        {
          "$ref": "http://oli.cmu.edu/schemas/slate-element.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "h6"
            }
          },
          "required": [
            "type"
          ]
        }
      ]
    },
    "ordered-list": {
      "type": "object",
      "properties": {
        "type": {
          "const": "ol"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/list-item"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "unordered-list": {
      "type": "object",
      "properties": {
        "type": {
          "const": "ul"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/list-item"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "list-item": {
      "type": "object",
      "properties": {
        "type": {
          "const": "li"
        },
        "children": {
          "type": "array",
          "items": {
            "type": [
              "#/$defs/ordered-list",
              "#/$defs/unordered-list",
              "#/$defs/text"
            ]
          }
        }
      }
    },
    "image": {
      "type": "object",
      "properties": {
        "type": {
          "const": "img"
        },
        "src": {
          "type": "string"
        },
        "height": {
          "type": "integer"
        },
        "width": {
          "type": "integer"
        },
        "alt": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        },
        "display": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "youtube": {
      "type": "object",
      "properties": {
        "type": {
          "const": "youtube"
        },
        "src": {
          "type": "string"
        },
        "height": {
          "type": "integer"
        },
        "width": {
          "type": "integer"
        },
        "alt": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        },
        "display": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "audio": {
      "type": "object",
      "properties": {
        "type": {
          "const": "audio"
        },
        "src": {
          "type": "string"
        },
        "alt": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "webpage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "iframe"
        },
        "src": {
          "type": "string"
        },
        "height": {
          "type": "integer"
        },
        "width": {
          "type": "integer"
        },
        "alt": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        },
        "display": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "table": {
      "type": "object",
      "properties": {
        "type": {
          "const": "table"
        },
        "caption": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/table-row"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "table-row": {
      "type": "object",
      "properties": {
        "type": {
          "const": "tr"
        },
        "children": {
          "type": "array",
          "items": {
            "type": "#/$defs/table-row"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "table-cell": {
      "oneOf": [
        {
          "$ref": "#/$defs/table-header"
        },
        {
          "$ref": "#/$defs/table-data"
        }
      ]
    },
    "table-header": {
      "type": "object",
      "properties": {
        "type": {
          "const": "th"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/table-cell-child"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "table-data": {
      "type": "object",
      "properties": {
        "type": {
          "const": "th"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/table-cell-child"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "table-cell-child": {
      "oneOf": [
        {
          "$ref": "#/$defs/paragraph"
        },
        {
          "$ref": "#/$defs/image"
        },
        {
          "$ref": "#/$defs/youtube"
        },
        {
          "$ref": "#/$defs/audio"
        },
        {
          "$ref": "#/$defs/math"
        }
      ]
    },
    "math": {
      "type": "object",
      "properties": {
        "type": {
          "const": "math"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/math-line"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "math-line": {
      "type": "object",
      "properties": {
        "type": {
          "const": "math_line"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/text"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "code-v1": {
      "type": "object",
      "properties": {
        "type": {
          "const": "code"
        },
        "language": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/code-line"
          }
        }
      },
      "required": [
        "type",
        "language",
        "children"
      ]
    },
    "code-line": {
      "type": "object",
      "properties": {
        "type": {
          "const": "code_line"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/text"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "code-v2": {
      "type": "object",
      "properties": {
        "type": {
          "const": "code"
        },
        "code": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "code",
        "language"
      ]
    },
    "blockquote": {
      "type": "object",
      "properties": {
        "type": {
          "const": "blockquote"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/paragraph"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "hyperlink": {
      "type": "object",
      "properties": {
        "type": {
          "const": "a"
        },
        "href": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/text"
          }
        }
      },
      "required": [
        "type",
        "href",
        "target",
        "children"
      ]
    },
    "input-ref": {
      "type": "object",
      "properties": {
        "type": {
          "const": "input_ref"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/text"
          }
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "popup": {
      "type": "object",
      "properties": {
        "type": {
          "const": "popup"
        },
        "trigger": {
          "enum": [
            "hover",
            "click",
            "focus"
          ]
        },
        "content": {
          "$ref": "#/$defs/rich-text"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/text"
          }
        }
      }
    },
    "rich-text": {
      "type": "array",
      "items": {
        "$ref": "#"
      }
    }
  }
}