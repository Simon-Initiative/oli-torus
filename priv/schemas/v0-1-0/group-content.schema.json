{
  "$id": "http://torus.oli.cmu.edu/schemas/v0-1-0/group-content.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Group Content",
  "description": "A grouping of content with a particular layout",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "const": "group"
    },
    "layout": {
      "enum": [
        "deck"
      ]
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "http://torus.oli.cmu.edu/schemas/v0-1-0/resource-content.schema.json"
      }
    }
  },
  "required": [
    "type",
    "layout",
    "children"
  ]
}