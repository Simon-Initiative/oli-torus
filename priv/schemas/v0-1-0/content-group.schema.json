{
  "$id": "http://torus.oli.cmu.edu/schemas/v0-1-0/content-group.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Content Group",
  "description": "A grouping of content with a particular layout",
  "type": "object",
  "properties": {
    "id": {
      "type": ["integer", "string"]
    },
    "type": {
      "const": "group"
    },
    "layout": {
      "enum": ["deck"]
    },
    "children": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "http://torus.oli.cmu.edu/schemas/v0-1-0/content-element.schema.json"
          },
          {
            "$ref": "http://torus.oli.cmu.edu/schemas/v0-1-0/content-block.schema.json"
          },
          {
            "$ref": "http://torus.oli.cmu.edu/schemas/v0-1-0/content-group.schema.json"
          },
          {
            "$ref": "http://torus.oli.cmu.edu/schemas/v0-1-0/activity-reference.schema.json"
          },
          {
            "$ref": "http://torus.oli.cmu.edu/schemas/v0-1-0/activity-bank-selection.schema.json"
          },
          {
            "$ref": "http://torus.oli.cmu.edu/schemas/v0-1-0/activity-sequence.schema.json"
          }
        ]
      }
    }
  },
  "required": ["type", "layout", "children"]
}
