{
  "$id": "http://oli.cmu.edu/schemas/activity-reference.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Activity Reference",
  "description": "An activity reference",
  "type": "object",
  "properties": {
    "type": {
      "const": "activity-reference"
    },
    "activity_id": {
      "type": "integer"
    },
    "purpose": {
      "enum": [
        "none",
        "checkpoint",
        "didigetthis",
        "learnbydoing"
      ]
    }
  },
  "required": [
    "type",
    "activity_id",
    "purpose"
  ]
}