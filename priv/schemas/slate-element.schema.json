{
  "$id": "http://oli.cmu.edu/schemas/slate-element.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Slate Element",
  "description": "Element described by slate editor",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/descendant"
      }
    }
  },
  "required": [
    "id",
    "children"
  ],
  "$defs": {
    "descendant": {
      "anyOf": [
        {
          "$ref": "#/$defs/base-element"
        },
        {
          "$ref": "#/$defs/text"
        }
      ]
    },
    "base-element": {
      "type": "object",
      "properties": {
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/descendant"
          }
        }
      }
    },
    "text": {
      "type": "object",
      "properties": {
        "text": "string"
      }
    }
  }
}