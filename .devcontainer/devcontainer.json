// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "oli-torus",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "shutdownAction": "stopCompose",

  // Commands to run
  "initializeCommand": "sh .devcontainer/scripts/init.sh",
  "postCreateCommand": "mix deps.get && yarn",
  "postStartCommand": "mix ecto.setup",

  // Port forwarding
  "forwardPorts": [80, 5432, 9000, 9001],
  "portsAttributes": {
    "80": {
      "label": "Phoenix Server",
      "onAutoForward": "openPreview"
    },
    "5432": {
      "label": "PostgreSQL"
    },
    "9000": {
      "label": "MinIO API"
    },
    "9001": {
      "label": "MinIO Console"
    }
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "github.vscode-github-actions",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker",
        "jakebecker.elixir-ls",
        "pantajoe.vscode-elixir-credo",
        "saratravi.elixir-formatter",
        "phoenixframework.phoenix",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "fabiospampinato.vscode-diff",
        "usernamehw.errorlens"
      ],
      "settings": {
        "elixir.projectPath": "/workspaces/${localWorkspaceFolderBasename}",
        "elixir.mixPath": "/usr/local/bin/mix"
      }
    }
  }
}
